@using SIGEBI.Web0.Models.Author
@model SIGEBI.Web0.Models.Author.EditAuthorModel

@{
    ViewData["Title"] = "Edit";
}

<style>
  
    .btn-esmeralda {
        background-color: #04928b; 
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-esmeralda:hover {
            background-color: #036862; 
            color: white;
        }

    .btn-pastel {
        background-color: #b0e0e6; 
        color: #2c3e50; 
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-pastel:hover {
            background-color: #87ceeb; 
            color: #2c3e50;
        }

    .custom-title {
        color: #04928b; 
        font-weight: 300;
        margin-bottom: 20px;
    }

    .form-container {
        padding: 20px;
        border-radius: 8px;
        background-color: #f8f9fa; 
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>

<h1 class="custom-title">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <div class="form-container">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Campo oculto para AuthorId -->
                <input asp-for="AuthorId" type="hidden" />

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Nationality" class="control-label"></label>
                    <input asp-for="Nationality" class="form-control" />
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Save" class="btn btn-esmeralda" />
                    <a asp-action="Index" class="btn btn-pastel">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
