@model SIGEBI.Web0.Models.Book.BookModel

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Estilos personalizados para esta vista */
    .btn-marron-oscuro {
        background-color: #6D4C41; /* Marrón oscuro (chocolate) */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-marron-oscuro:hover {
            background-color: #5D4037; /* Marrón más oscuro al pasar el ratón */
            color: white;
        }

    .btn-marron-claro {
        background-color: #D7CCC8; /* Marrón claro (pastel) */
        color: #3e2723; /* Texto oscuro para contraste */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-marron-claro:hover {
            background-color: #BCAAA4; /* Marrón claro más oscuro al pasar el ratón */
            color: #3e2723;
        }

    .custom-title {
        color: #6D4C41; /* Usa el mismo marrón oscuro para el título */
        font-weight: 300;
        margin-bottom: 20px;
    }

    .details-container {
        padding: 20px;
        border-radius: 8px;
        background-color: #f8f9fa; /* Fondo muy claro para la sección de detalles */
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .dl-horizontal dt {
        float: left;
        clear: left;
        width: 150px;
    }

    .dl-horizontal dd {
        margin-left: 170px;
    }
</style>

