@model SIGEBI.Application.DTOsAplication.UserHistoryDTOs.UserHistoryCreationDto
@{
    ViewData["Title"] = "Registrar Historial Manual";
}

<h1>Registrar Nueva Entrada de Historial</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnteredEmail" class="control-label"></label>
                <input asp-for="EnteredEmail" class="form-control" />
                <span asp-validation-for="EnteredEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttemptDate" class="control-label"></label>
                <input asp-for="AttemptDate" class="form-control" type="datetime-local" /> @* Para fecha y hora local *@
                <span asp-validation-for="AttemptDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IpAddress" class="control-label"></label>
                <input asp-for="IpAddress" class="form-control" />
                <span asp-validation-for="IpAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAgent" class="control-label"></label>
                <input asp-for="UserAgent" class="form-control" />
                <span asp-validation-for="UserAgent" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-2">
                <input class="form-check-input" asp-for="IsSuccessful" />
                <label class="form-check-label" asp-for="IsSuccessful"> @Html.DisplayNameFor(model => model.IsSuccessful)</label>
            </div>
            <div class="form-group">
                <label asp-for="FailureReason" class="control-label"></label>
                <input asp-for="FailureReason" class="form-control" />
                <span asp-validation-for="FailureReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObtainedRole" class="control-label"></label>
                <input asp-for="ObtainedRole" class="form-control" />
                <span asp-validation-for="ObtainedRole" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}