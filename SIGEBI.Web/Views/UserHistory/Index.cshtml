@model IEnumerable<SIGEBI.Web.Models.UserHistory.UserHistoryViewModel>
@{
    ViewData["Title"] = "Historial de Actividad de Usuarios";
}

<h1>Historial de Actividad de Usuarios</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.WarningMessage))
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.WarningMessage
    </div>
}
else if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        No se encontraron entradas de historial para mostrar.
        @if (ViewBag.SearchUserId != null)
        {
            <span>(Para el Usuario ID: @ViewBag.SearchUserId)</span>
        }
    </div>
}
else
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Registrar Nueva Entrada de Historial</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.LogId)</th>
                <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                <th>@Html.DisplayNameFor(model => model.First().EnteredEmail)</th>
                <th>@Html.DisplayNameFor(model => model.First().AttemptDate)</th>
                <th>@Html.DisplayNameFor(model => model.First().IpAddress)</th>
                <th>@Html.DisplayNameFor(model => model.First().IsSuccessful)</th>
                <th>@Html.DisplayNameFor(model => model.First().ObtainedRole)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.LogId)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.EnteredEmail)</td>
                    <td>@Html.DisplayFor(modelItem => item.AttemptDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.IpAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsSuccessful)</td>
                    <td>@Html.DisplayFor(modelItem => item.ObtainedRole)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.LogId" class="btn btn-sm btn-secondary">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.LogId" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}