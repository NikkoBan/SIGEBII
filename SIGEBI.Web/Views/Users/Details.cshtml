@model SIGEBI.Web.Models.Users.UserViewModel
@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h1>Detalles de Usuario</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.WarningMessage))
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.WarningMessage
    </div>
}
else if (Model == null)
{
    <div class="alert alert-info" role="alert">
        Usuario no encontrado.
    </div>
}
else
{
    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UserId)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InstitutionalEmail)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.InstitutionalEmail)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InstitutionalIdentifier)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.InstitutionalIdentifier)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoleId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RoleId)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsActive)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsActive)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegistrationDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RegistrationDate)</dd>
        </dl>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-info">Editar</a> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
}