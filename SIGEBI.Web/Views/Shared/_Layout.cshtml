@using SIGEBI.Web.Models
@using System.Text.Json
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIGEBI</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">SIGEBI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Publishers" asp-action="Index">Editoriales</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @* Bloque de notificaciones *@
        @{
            var notifications = new List<NotificationMessage>();
            if (TempData["Notifications"] != null)
            {
                notifications = JsonSerializer.Deserialize<List<NotificationMessage>>(TempData["Notifications"].ToString()!) ?? new();
            }
        }
        @if (notifications.Any())
        {
            foreach (var notification in notifications)
            {
                var alertClass = notification.Type switch
                {
                    "success" => "alert-success",
                    "error" => "alert-danger",
                    "info" => "alert-info",
                    "warning" => "alert-warning",
                    _ => "alert-secondary"
                };
                <div class="alert @alertClass alert-dismissible fade show mt-2" role="alert">
                    @notification.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                </div>
            }
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-5 py-3 bg-light border-top">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Now.Year - SIGEBI</span>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>